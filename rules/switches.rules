				}
			} else {
				if (TimerGuestLooUpOff !== null && TimerGuestLooUpOff.hasTerminated()) {
					postUpdate(Light_GuestLooScenes, 0)
				} else {
					if (Light_GuestLooScenes.state == 1) {
