end

rule "Switch BathLongUp ON"
when
    Item Switch_BathLongUp received update ON or
    Item Switch_BathInsideLongUp received update ON
then
    postUpdate(Switch_BathLongUp, OFF)

	if (Switch_BathLongUpEnd.state == OFF && Switch_BathInsideLongUpEnd.state == OFF) {
	  	var HSBType light = Light_BathLColor.state as HSBType
	  	var int DimmValue = (light.getBrightness()).intValue

	  	if (Light_BathScenes.state == 0 || DimmValue <= 0) {
			if (Daylight.state == ON) {
				postUpdate(Light_BathScenes, 1)
			} else if (LoftMode.state == 2 ||						// sleeping
				       (now.getHour() > 6 && now.getHour() < 23 )) {
				postUpdate(Light_BathScenes, 5)
			} else {
				postUpdate(Light_BathScenes, 3)
			}
	  	} else {
		  	if (DimmValue < 95) {
		  		DimmValue = DimmValue + 5
		  	} else {
		  		DimmValue = 100
		  	}

			sendCommand(Light_BathLColor, new HSBType(light.getHue(), light.getSaturation(), new PercentType(DimmValue)))
			sendCommand(Light_BathRColor, new HSBType(light.getHue(), light.getSaturation(), new PercentType(DimmValue)))
	  	}

		TimerBathDimmer?.cancel()
		TimerBathDimmer = createTimer(now.plusSeconds(1)) [|
			postUpdate(Switch_BathLongUp, ON)
		]
	}
end

rule "Switch BathLongDown ON"
when
    Item Switch_BathLongDown received update ON or
    Item Switch_BathInsideLongDown received update ON
then
    postUpdate(Switch_BathLongDown, OFF)

    if (Switch_BathLongDownEnd.state == OFF && Switch_BathInsideLongDownEnd.state == OFF) {
	  	var HSBType light = Light_BathLColor.state as HSBType
	  	var int DimmValue = (light.getBrightness()).intValue

      	if (DimmValue >= 10) {
      		DimmValue = DimmValue - 5
      	} else if (DimmValue >= 2) {
      		DimmValue = DimmValue - 1
      	} else {
			DimmValue = 1
		}

		sendCommand(Light_BathLColor, new HSBType(light.getHue(), light.getSaturation(), new PercentType(DimmValue)))
		sendCommand(Light_BathRColor, new HSBType(light.getHue(), light.getSaturation(), new PercentType(DimmValue)))

		TimerBathDimmer?.cancel()
		TimerBathDimmer = createTimer(now.plusSeconds(1)) [|
			postUpdate(Switch_BathLongDown, ON)
		]
	}
end

rule "Switch BathLong OFF"
when
    Item Switch_BathLongUpEnd received update ON or
    Item Switch_BathInsideLongUpEnd received update ON or
    Item Switch_BathLongDownEnd received update ON or
    Item Switch_BathInsideLongDownEnd received update ON or
    Item Switch_BathShortUp received update ON or
    Item Switch_BathInsideShortUp received update ON or
    Item Switch_BathShortDown received update ON or
    Item Switch_BathInsideShortDown received update ON
then
