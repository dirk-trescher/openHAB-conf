				postUpdate(Light_BathScenes, 1)
			} else if (Light_BathScenes.state == 5) {
				postUpdate(Light_BathScenes, 3)
			} else if (Light_BathScenes.state == 6) {
				postUpdate(Light_BathScenes, 3)
			}
		} else if (LoftMode.state == 2 ||						// sleeping
			       (now.getHour() < 6 || now.getHour() >= 23 )) {
			if (Light_BathScenes.state == 1) {
				postUpdate(Light_BathScenes, 5)
			} else if (Light_BathScenes.state == 3) {
				postUpdate(Light_BathScenes, 1)
			} else if (Light_BathScenes.state == 5) {
				postUpdate(Light_BathScenes, 3)
			} else if (Light_BathScenes.state == 6) {
				postUpdate(Light_BathScenes, 5)
			}
		} else {
			if (Light_BathScenes.state == 1) {
				postUpdate(Light_BathScenes, 3)
			} else if (Light_BathScenes.state == 3) {
				postUpdate(Light_BathScenes, 5)
			} else if (Light_BathScenes.state == 5) {
				postUpdate(Light_BathScenes, 1)
			} else if (Light_BathScenes.state == 6) {
				postUpdate(Light_BathScenes, 5)
			}
		}
	}
